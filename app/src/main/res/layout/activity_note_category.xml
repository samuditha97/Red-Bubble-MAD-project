<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".NoteCategoryActivity">

    <TextView
        android:id="@+id/note_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Add Note"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="390dp"
        android:layout_height="113dp"
        android:layout_below="@+id/note_category"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/school"
            android:layout_width="147dp"
            android:layout_height="match_parent"
            android:src="@drawable/school" />

        <ImageView
            android:id="@+id/office"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/office" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="395dp"
        android:layout_height="120dp"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/personal"
            android:layout_width="105dp"
            android:layout_height="99dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/personal" />

        <ImageView
            android:id="@+id/events"
            android:layout_width="110dp"
            android:layout_height="98dp"
            android:src="@drawable/events" />
    </LinearLayout>

</RelativeLayout>